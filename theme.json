{
  "version": 2,
  "settings": {
    "border": false,
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "link": true,
      "text": true,
      "background": true,
      "defaultGradients": true,
      "defaultPalette": false,
      "palette": [
        {
          "name": "Black",
          "slug": "black",
          "color": "Black"
        },
        {
          "name": "White",
          "slug": "white",
          "color": "White"
        },
        {
          "name": "Primary",
          "slug": "primary",
          "color": "var(--primary-color)"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "color": "var(--secondary-color)"
        },
        {
          "name": "Body",
          "slug": "body",
          "color": "#111111"
        },
        {
          "name": "Headings",
          "slug": "headings",
          "color": "#333333"
        },
        {
          "name": "Light Text",
          "slug": "light-text",
          "color": "SlateGray"
        },
        {
          "name": "Links",
          "slug": "links",
          "color": "var(--link-color)"
        },
        {
          "name": "Links: Hover",
          "slug": "links-hover",
          "color": "var(--link-color-hover)"
        },
        {
          "name": "Call to Action",
          "slug": "call-to-action",
          "color": "var(--header-cta-button-color)"
        },
        {
          "name": "Page",
          "slug": "page",
          "color": "var(--page-color)"
        },
        {
          "name": "Gray Wash",
          "slug": "gray-wash",
          "color": "rgba(0, 0, 0, .1)"
        },
        {
          "name": "Highlight",
          "slug": "highlight",
          "color": "rgba(255, 255, 0, .5)"
        }
      ],
      "duotone": [],
      "gradients": []
    },
    "custom": {
      "typography": {
        "font-size": {
          "x-small": ".8rem",
          "normal": "1.25rem",
					"xxl": "3.052rem",
					"huge": "3.815rem"
				},
        "line-height": {
					"small": "1.15",
					"normal": "1.5"
				}
      }
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": false,
      "spacingScale": {
        "operator": "*",
        "increment": 1.5,
        "steps": 7,
        "mediumStep": 1.25,
        "unit": "rem"
      },
			"units": ["em"]
		},
    "typography": {
      "customFontSize": false,
      "lineHeight": false,
      "dropCap": false,
      "fontStyle": false,
      "fontWeight": false,
      "letterSpacing": true,
      "textDecoration": false,
      "textTransform": true,
      "fontSizes": [
				{
					"size": "1rem",
					"slug": "small"
				},
				{
					"size": "1.563rem",
					"slug": "medium"
				},
				{
					"size": "1.953rem",
					"slug": "large"
				},
				{
					"size": "2.441rem",
					"slug": "x-large"
				}
			]
    },
    "layout": {
			"contentSize": "1100px",
      "wideSize": "1320px"
		}
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--page)",
      "text": "var(--wp--preset--color--body)"
    },
    "typography": {
      "fontFamily": "var(--body-font)",
      "fontSize": "var(--wp--custom--typography--font-size--normal)",
      "lineHeight": "var(--wp--custom--typography--line-height--normal)"
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "9999px",
          "color": "currentColor",
          "style": "solid",
          "width": "2px"
        },
        "spacing": {
					"padding": ".5em 1em"
				},
        "typography": {
          "fontFamily": "var(--heading-font)",
          "textDecoration": "none"
        }
      },
      "core/code": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--normal)"
        }
      },
      "core/categories": {
        "typography": {
          "fontFamily": "var(--heading-font)"
        }
      },
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--headings)"
        },
        "spacing": {
          "margin": {
            "bottom": ".5em"
          }
        },
        "typography": {
          "fontFamily": "var(--heading-font)",
          "fontSize": "var(--wp--custom--typography--font-size--normal)",
          "lineHeight": "var(--wp--custom--typography--line-height--small)"
        }
      },
      "core/list": {
        "spacing": {
          "padding": {
            "left": "2em"
          }
        },
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--normal)"
        }
      },
      "core/paragraph": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--normal)"
        }
      },
      "core/site-title": {
        "color": {
          "text": "$headings"
        },
        "typography": {
          "fontFamily": "var(--heading-font)"
        }
      }
    },
    "elements": {
			"h1": {
				"typography": {
          "fontSize": "var(--wp--custom--typography--font-size--xxl)",
					"fontWeight": "bold"
				}
			},
			"h2": {
				"typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "bold"
				}
			},
			"h3": {
				"typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "bold"
				}
			},
			"h4": {
				"typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "bold"
				}
			},
			"h5": {
				"typography": {
          "fontSize": "var(--wp--custom--typography--font-size--normal)",
					"fontWeight": "bold",
          "textTransform": "uppercase"
				}
			},
			"h6": {
				"typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "normal",
          "textTransform": "uppercase"
				}
			},
      "link": {
        "color": {
          "text": "var(--wp--preset--color--links)"
        },
        "typography": {
          "textDecoration": "underline"
				}
      }
		}
  }
}
