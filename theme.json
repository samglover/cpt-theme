{
  "version": 2,
  "settings": {
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "name": "Black",
          "color": "var(--wp--preset--color--black)"
        },
        {
          "name": "White",
          "color": "var(--wp--preset--color--white)"
        },
        {
          "name": "Primary",
          "slug": "primary",
          "color": "var(--primary-color)"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "color": "var(--secondary-color)"
        },
        {
          "name": "Page Color",
          "slug": "page-color",
          "color": "var(--page-color)"
        }
      ]
    },
    "custom": {
      "typography": {
        "font-size": {
          "x-small": ".8rem",
          "normal": "1.25rem",
					"xxl": "3.052rem",
					"huge": "3.815rem"
				},
        "line-height": {
					"small": "1.15",
					"normal": "1.5"
				}
      }
    },
    "spacing": {
			"units": [
				"px",
				"em",
        "rem"
			]
		},
    "typography": {
      "customFontSize": false,
			"dropCap": false,
      "letterSpacing": false,
      "fontSizes": [
				{
					"size": "1rem",
					"slug": "small"
				},
				{
					"size": "1.563rem",
					"slug": "medium"
				},
				{
					"size": "1.953rem",
					"slug": "large"
				},
				{
					"size": "2.441rem",
					"slug": "x-large"
				}
			]
    },
    "layout": {
			"contentSize": "1100px"
		}
  },
  "styles": {
    "color": {
      "text": "var(--body-color)"
    },
    "typography": {
      "fontFamily": "var(--body-font)"
    },
    "blocks": {
      "core/button": {
        "border": {
          "color": "var(--link-color)",
  				"radius": "9999px",
          "style": "solid",
          "width": "2px"
  			},
        "color": {
          "background": "var(--wp--preset--color--white)",
					"text": "var(--link-color)"
        },
        "spacing": {
					"padding": ".25em 1em"
				},
        "typography": {
          "fontFamily": "var(--heading-font)"
        }
      },
      "core/categories": {
        "typography": {
          "fontFamily": "var(--heading-font)"
        }
      },
      "core/heading": {
        "color": {
          "text": "var(--heading-color)"
        },
        "typography": {
          "fontFamily": "var(--heading-font)"
        }
      },
      "core/paragraph": {
        "typography": {
          "fontSize": "var(--wp--custom--typography--font-size--normal)"
        }
      },
      "core/site-title": {
        "color": {
          "text": "var(--heading-color)"
        },
        "typography": {
          "fontFamily": "var(--heading-font)"
        }
      }
    },
    "elements": {
			"h1": {
        "color": {
          "text": "var(--heading-color)"
        },
				"typography": {
          "fontSize": "var(--wp--custom--typography--font-size--xxl)",
					"fontWeight": "bold",
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				}
			},
			"h2": {
        "color": {
          "text": "var(--heading-color)"
        },
				"typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "bold",
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				}
			},
			"h3": {
        "color": {
          "text": "var(--heading-color)"
        },
				"typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "bold",
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				}
			},
			"h4": {
        "color": {
          "text": "var(--heading-color)"
        },
				"typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "bold",
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				}
			},
			"h5": {
        "color": {
          "text": "var(--heading-color)"
        },
				"typography": {
          "fontSize": "var(--wp--custom--typography--font-size--normal)",
					"fontWeight": "bold",
					"lineHeight": "var(--wp--custom--typography--line-height--small)",
          "textTransform": "uppercase"
				}
			},
			"h6": {
        "color": {
          "text": "var(--heading-color)"
        },
				"typography": {
          "fontSize": "var(--wp--preset--font-size--small))",
					"fontWeight": "normal",
					"lineHeight": "var(--wp--custom--typography--line-height--small)",
          "textTransform": "uppercase"
				}
			}
		}
  }
}
