{
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "name": "Black",
          "slug": "black",
          "color": "Black"
        },
        {
          "name": "White",
          "slug": "white",
          "color": "White"
        },
        {
          "name": "Primary",
          "slug": "primary",
          "color": "var(--primary-color)"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "color": "var(--secondary-color)"
        },
        {
          "name": "Body",
          "slug": "body",
          "color": "#111111"
        },
        {
          "name": "Headings",
          "slug": "headings",
          "color": "#333333"
        },
        {
          "name": "Light Text",
          "slug": "light-text",
          "color": "SlateGray"
        },
        {
          "name": "Links",
          "slug": "links",
          "color": "var(--link-color)"
        },
        {
          "name": "Links: Hover",
          "slug": "links-hover",
          "color": "var(--link-color-hover)"
        },
        {
          "name": "Call to Action",
          "slug": "call-to-action",
          "color": "var(--header-cta-button-color)"
        },
        {
          "name": "Page",
          "slug": "page",
          "color": "var(--page-color)"
        },
        {
          "name": "Gray Wash",
          "slug": "gray-wash",
          "color": "rgba(0, 0, 0, .1)"
        },
        {
          "name": "Highlight",
          "slug": "highlight",
          "color": "rgba(255, 255, 0, .5)"
        }
      ],
      "gradients": [
        {
          "name": "Primary Gradient",
          "slug": "cpt-primary",
          "gradient": "linear-gradient(-135deg, var(--primary-color) -90%, #efefef 100%)"
        },
        {
          "name": "Secondary Gradient",
          "slug": "cpt-secondary",
          "gradient": "linear-gradient(-135deg, var(--primary-color) -90%, #efefef 100%)"
        }
      ]
    },
    "spacing": {
      "customSpacingSize": true,
      "spacingScale": {
        "operator": "*",
				"increment": 1.5,
				"steps": 7,
				"mediumStep": 2.5,
				"unit": "rem"
      }
		},
    "typography": {
      "customFontSize": false,
      "dropCap": false,
      "fluid": true,
      "letterSpacing": false,
      "textDecoration": false,
      "fontSizes": [
        {
          "name": "XS",
          "fluid": {
            "min": ".64rem",
            "max": ".8rem"
          },
					"size": ".8rem",
					"slug": "xs"
				},
				{
          "name": "Small",
          "fluid": {
            "min": ".8rem",
            "max": "1rem"
          },
					"size": "1rem",
					"slug": "sm"
				},
        {
          "name": "Normal",
					"size": "1.25rem",
					"slug": "normal"
				},
				{
          "name": "Medium",
          "fluid": {
            "min": "1.25rem",
            "max": "1.563rem"
          },
					"size": "1.563rem",
					"slug": "md"
				},
				{
          "name": "Large",
          "fluid": {
            "min": "1.563rem",
            "max": "1.953rem"
          },
					"size": "1.953rem",
					"slug": "lg"
				},
				{
          "name": "XL",
          "fluid": {
            "min": "1.953rem",
            "max": "2.441rem"
          },
					"size": "2.441rem",
					"slug": "xl"
				},
        {
          "name": "XXL",
          "fluid": {
            "min": "2.441rem",
            "max": "3.052rem"
          },
					"size": "3.052rem",
					"slug": "xxl"
				},
        {
          "name": "Huge",
          "fluid": {
            "min": "3.052rem",
            "max": "4.768rem"
          },
					"size": "3.815rem",
					"slug": "huge"
				}
			]
    },
    "layout": {
			"contentSize": "1100px",
      "wideSize": "1320px"
		},
    "custom": {
      "typography": {
        "line-height": {
					"sm": "1.15",
					"normal": "1.5"
				}
      }
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--page-color)",
      "text": "var(--wp--preset--color--body)"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--40)",
      "padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--40)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--40)"
			}
    },
    "typography": {
      "fontFamily": "var(--body-font)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "var(--wp--custom--typography--line-height--normal)"
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "9999px",
          "width": "2px"
        },
        "spacing": {
					"padding": ".5em 1em"
				},
        "typography": {
          "fontFamily": "var(--heading-font)",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)",
          "textDecoration": "none"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--links-hover)"
          }
        }
      },
      "core/categories": {
        "typography": {
          "fontFamily": "var(--heading-font)"
        }
      },
      "core/code": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--normal)"
        }
      },
      "core/cover": {
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--60)",
            "bottom": "var(--wp--preset--spacing--60)"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--40)"
          }
        },
        "typography": {
          "fontFamily": "var(--heading-font)",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)"
        }
      },
      "core/image": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--20)"
          }
        }
      },
      "core/list": {
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--60)"
          }
        },
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--normal)"
        }
      },
      "core/paragraph": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--normal)"
        }
      },
      "core/post-title": {
        "color": {
          "text": "var(--wp--preset--color--headings)"
        },
        "typography": {
          "fontFamily": "var(--heading-font)",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)"
        }
      },
      "core/site-title": {
        "color": {
          "text": "var(--wp--preset--color--headings)"
        },
        "typography": {
          "fontFamily": "var(--heading-font)",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)"
        }
      }
    },
    "elements": {
			"h1": {
				"typography": {
          "fontSize": "var(--wp--preset--font-size--xxl)",
					"fontWeight": "bold",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)"
				}
			},
			"h2": {
				"typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
					"fontWeight": "bold",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)"
				}
			},
			"h3": {
				"typography": {
          "fontSize": "var(--wp--preset--font-size--lg)",
					"fontWeight": "bold",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)"
				}
			},
			"h4": {
				"typography": {
          "fontSize": "var(--wp--preset--font-size--md)",
					"fontWeight": "bold",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)"
				}
			},
			"h5": {
				"typography": {
          "fontSize": "inherit",
					"fontWeight": "bold",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)",
          "textTransform": "uppercase"
				}
			},
			"h6": {
				"typography": {
          "fontSize": "var(--wp--preset--font-size--sm)",
					"fontWeight": "normal",
          "lineHeight": "var(--wp--custom--typography--line-height--sm)",
          "textTransform": "uppercase"
				}
			},
      "caption": {
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--20)",
            "bottom": "var(--wp--preset--spacing--20)"
          }
        },
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--sm)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--links)"
        },
        "typography": {
          "textDecoration": "underline"
				}
      }
		}
  }
}
